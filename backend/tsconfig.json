{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}